<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - profescipta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/profescipta.styles.css" asp-append-version="true" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

    <!-- Datepicker JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script src="https://www.jqueryscript.net/demo/Price-Format-jQuery-Plugin-Price-Format/jquery.price_format.js"></script>

   <style>
     
     .bottom-buttons {
    position: fixed;
    bottom: 10px; /* Adjust the bottom space as needed */
    left: 50%;
    transform: translateX(-50%); /* Center the div horizontally */
    z-index: 9999; /* Ensure the buttons are above other content */
}

 #example_wrapper{
        background-color: #ffffff !important;
   }

tfoot {
    border: none;
}

    .dataTables_info {
    float: right; /* Memindahkan info entri ke kanan */
}

#example tbody tr {
    height: 50px; /* Atur tinggi sesuai keinginan, misalnya 50px */
}

@* .dataTables_paginate {
    float: right; /* Memindahkan pagination ke kiri */
} *@

        .bordered-box {
            border: 2px solid black;
            border-radius: 10px;
            padding: 20px;
            background-color: #f5f5f5; /* Light background */
            @* max-width: 800px; /* Optional: Limit width for better centering */ *@
            margin: auto; /* Center the bordered box itself */
            height: 200px;
        }
        
        .custom-label {
            font-weight: bold;
            color: #2c3e50;
        }

        .btn-search {
            background-color: #1a3a6e;
            color: white;
            font-weight: bold;
            border-radius: 5px;
        }

        .custom-input {
            border-radius: 5px;
            border: 2px solid black;
        }
    </style>
</head>
<body style="background-color: #79a5d2;">
    <header>
        <nav style="background: linear-gradient(to right, rgb(0, 116, 190), #011537);" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 .bg-gradient">
            <div class="container-fluid">
                <a class="navbar-brand mb-0 h1" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["Title"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
   
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
